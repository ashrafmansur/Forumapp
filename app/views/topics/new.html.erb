<h1>New Topic</h1>
<%= form_for @topic, :url => topics_path do |f| %>
   
   <%= f.label :title, "Title" %>
   <%= f.text_field :title %>

   <%= f.label :body, "Description" %>
   <%= f.text_area :body %> 

   <%= f.hidden_field :user_id, :value => current_user.id %>

   <%= f.submit "Create" %>
<% end %>